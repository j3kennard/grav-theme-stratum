{% set sections_enabled = (page.header.footer.sections_enabled != null) ? (page.header.footer.sections_enabled == 'yes') : theme.footer.sections_enabled %}
{% if sections_enabled %}
    <div id="page-footer-sections">
        {% set sections_position = (page.header.footer.sections_position != null) ? page.header.footer.sections_position : theme.footer.sections_position %}
        {% if sections_position == 'page_before_theme' and page.header.footer.sections %}
            {% for s in page.header.footer.sections %}
                <section class="page-footer-section">
                    <h3>{{ s.title|e }}</h3>
                    {{ s.content|raw }}
                </section>
            {% endfor %}
        {% endif %}
        {% for s in (sections_position == 'page_override_theme' and page.header.footer.sections) ? page.header.footer.sections : theme.footer.sections %}
            <section class="page-footer-section">
                <h3>{{ s.title|e }}</h3>
                {{ s.content|raw }}
            </section>
        {% endfor %}
        {% if sections_position == 'theme_before_page' and page.header.footer.sections %}
            {% for s in page.header.footer.sections %}
                <section class="page-footer-section">
                    <h3>{{ s.title|e }}</h3>
                    {{ s.content|raw }}
                </section>
            {% endfor %}
        {% endif %}
    </div>
{% endif %}
